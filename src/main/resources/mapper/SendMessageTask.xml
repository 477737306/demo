<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmit.testing.dao.SendMessageTaskMapper">

    <resultMap id="BaseResultMap" type="com.cmit.testing.entity.SendMessage">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="receiver_phone" jdbcType="INTEGER" property="receiverPhone"/>
        <result column="sender_phone" jdbcType="INTEGER" property="senderPhone"/>
        <result column="text" jdbcType="VARCHAR" property="text"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="task_status" jdbcType="INTEGER" property="taskStatus"/>
        <result column="equipment_type" jdbcType="INTEGER" property="equipmentType"/>
    </resultMap>

    <resultMap id="ResultMapWithBLOBs" type="com.cmit.testing.entity.SendMessage" extends="BaseResultMap">
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, receiver_phone, sender_phone, text, create_time, task_status,equipment_type
    </sql>

    <select id="queryTask" resultMap="ResultMapWithBLOBs">
        select
        <include refid="Base_Column_List"/>
        from send_message_task where task_status = "0" and equipment_type = "2"
    </select>

    <!--查询所有需要手机设备发送短信的任务-->
    <select id="queryAppTask" resultMap="ResultMapWithBLOBs">
        SELECT <include refid="Base_Column_List"/>
        FROM send_message_task
        WHERE task_status = "0" AND equipment_type = "1"
    </select>

    <update id="update" parameterType="com.cmit.testing.entity.SendMessage">
        update send_message_task
        <trim prefix="set" suffixOverrides=",">

            <if test="receiverPhone!=null">receiver_phone=#{receiverPhone},</if>

            <if test="senderPhone!=null">sender_phone=#{senderPhone},</if>

            <if test="text!=null">text=#{text},</if>

            <if test="createTime!=null">create_time=#{createTime},</if>

            <if test="taskStatus!=null">task_status=#{taskStatus},</if>

            <if test="equipmentType!=null">equipment_type=#{equipmentType},</if>

        </trim>
        where id = #{id}
    </update>

    <insert id="insert" parameterType="com.cmit.testing.entity.SendMessage">
        INSERT INTO `send_message_task` (`receiver_phone`, `sender_phone`, `text`, `create_time`,`equipment_type`) VALUES ( #{receiverPhone}, #{senderPhone}, #{text}, NOW(),#{equipmentType});
    </insert>


    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from send_message_task where id = #{id,jdbcType=INTEGER}
    </delete>

    <select id="queryByWhere" parameterType="com.cmit.testing.entity.SendMessage" resultMap="ResultMapWithBLOBs">
        select
        <include refid="Base_Column_List"/>
        from send_message_task
        <where>
            1=1
            <if test="receiverPhone != null and receiverPhone != ''">
                and receiver_phone = #{receiverPhone,jdbcType=VARCHAR}
            </if>

            <if test="senderPhone != null and senderPhone != ''">
                and sender_phone = #{senderPhone,jdbcType=VARCHAR}
            </if>

            <if test="text != null and text != ''">
                and text = #{text,jdbcType=VARCHAR}
            </if>

            <if test="isSend != null">
                and task_status = #{taskStatus, jdbcType=INTEGER}
            </if>

            <if test="equipmentType != null">
                and equipment_type = #{equipmentType, jdbcType=INTEGER}
            </if>
        </where>
    </select>
</mapper>